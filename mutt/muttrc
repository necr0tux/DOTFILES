
# set imap, smtp and other stuff
set folder = "imaps://MAIL.NAME@DOMAIN.XYZ@MAIL.MAILSERVER.XYZ:port"
set smtp_url = "smtps://MAIL.NAME@DOMAIN.XYZ@MAIL.MAILSERVER.XYZ:port"
set smtp_pass = "SECRETPASSKEY"
set imap_pass = "SECRETPASSLEY"
set from = "email@adress.xyz"
set realname = "MAX Musterman"
set editor="/usr/bin/nvim"

# set like filter rules
set spoolfile = "+INBOX"
set record = "+Sent"
set trash = "+Trash"
set postponed = "+Drafts"

# set the time for sync
set mail_check = 120

# set the Mailboxes
mailboxes =INBOX =Sent =Trash =Drafts =Junk =Other 

# enable the Sidebar + check the stats
set sidebar_visible
set sidebar_format = "%B%<F? [%F]>%* %<N?%N/>%S"
set mail_check_stats

# key bindings
bind index,pager \CP sidebar-prev
bind index,pager \CN sidebar-next
bind index,pager \CO sidebar-open


# source of colors 
source colors.muttrc



